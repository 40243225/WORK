<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundd2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="附近藥局查詢"
                android:id="@+id/button4"
                android:layout_gravity="center"
                android:onClick="Search"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:layout_marginTop="181dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="拿藥提醒"
                android:id="@+id/button3"
                android:layout_gravity="left|center_vertical"
                android:onClick="takeMedicine"
                android:nestedScrollingEnabled="true"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:layout_above="@+id/button11"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="藥盒使用狀況"
                android:id="@+id/button11"
                android:onClick="box_use"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/button4"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="設定吃藥時間"
                android:id="@+id/button21"
                android:layout_gravity="right|bottom"
                android:onClick="clock"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:layout_alignTop="@+id/button11"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignStart="@+id/button3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="健康存摺"
                android:id="@+id/button5"
                android:layout_gravity="right|center_vertical"
                android:onClick="Health"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:layout_above="@+id/button11"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="領藥Qrcode"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:id="@+id/button14"
                android:onClick="QR"
                android:layout_alignTop="@+id/button21"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="NFC開鎖"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:id="@+id/button13"
                android:onClick="NFC"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/button11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:text="問題發問"
                android:id="@+id/button8"
                android:layout_gravity="left|bottom"
                android:onClick="ask"
                android:layout_alignTop="@+id/button13"
                android:layout_alignLeft="@+id/button21"
                android:layout_alignStart="@+id/button21" />

            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_purple"
                android:text="最新公告"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal|bottom"
                android:nestedScrollingEnabled="true"
                android:onClick="New"
                android:layout_alignTop="@+id/button8"
                android:layout_alignLeft="@+id/button14"
                android:layout_alignStart="@+id/button14" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/Hello"
                android:textColor="@color/com_facebook_button_send_background_color_pressed"
                android:textSize="15dp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                android:layout_above="@+id/button3"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>